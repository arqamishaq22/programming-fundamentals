#include <iostream>
#include <string>
using namespace std;

int main() {
    string fruits[4] = {"Almond", "Cashew", "Date", "Raisin"}; 
    int stock[4] = {10, 12, 8, 15}; 
    int choice, qty;
    string name;
    bool found;

    do {
        cout << "\n===== Dry Fruits Management System =====" << endl;
        cout << "1. Show all Dry Fruits" << endl;
        cout << "2. Search Dry Fruit" << endl;
        cout << "3. Add Stock" << endl;
        cout << "4. Sell Dry Fruit" << endl;
        cout << "5. Exit" << endl;
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "\nAvailable Dry Fruits:\n";
                for (int i = 0; i < 4; i++) {
                    cout << i + 1 << ". " << fruits[i] << " - Quantity: " << stock[i] << endl;
                }
                break;

            case 2:
                cout << "Enter Dry Fruit name to search: ";
                cin >> name;
                found = false;
                for (int i = 0; i < 4; i++) {
                    if (fruits[i] == name) {
                        cout << name << " is available. Quantity: " << stock[i] << endl;
                        found = true;
                        break;
                    }
                }
                if (!found)
                    cout << "Dry Fruit not found!" << endl;
                break;

            case 3:
                cout << "Enter Dry Fruit name to add stock: ";
                cin >> name;
                found = false;
                for (int i = 0; i < 4; i++) {
                    if (fruits[i] == name) {
                        cout << "Enter quantity to add: ";
                        cin >> qty;
                        stock[i] += qty;
                        cout << "Stock updated successfully!" << endl;
                        found = true;
                        break;
                    }
                }
                if (!found)
                    cout << "Dry Fruit not found!" << endl;
                break;

            case 4:
                cout << "Enter Dry Fruit name to sell: ";
                cin >> name;
                found = false;
                for (int i = 0; i < 4; i++) {
                    if (fruits[i] == name) {
                        cout << "Enter quantity to sell: ";
                        cin >> qty;
                        if (qty <= stock[i]) {
                            stock[i] -= qty;
                            cout << "Sale successful! Remaining " << fruits[i] << ": " << stock[i] << endl;
                        } else {
                            cout << "Not enough stock available!" << endl;
                        }
                        found = true;
                        break;
                    }
                }
                if (!found)
                    cout << "Dry Fruit not found!" << endl;
                break;

            case 5:
                cout << "Exiting the system... Thank you!" << endl;
                break;

            default:
                cout << "Invalid choice! Try again." << endl;
        }

    } while (choice != 5);

    return 0;
}
